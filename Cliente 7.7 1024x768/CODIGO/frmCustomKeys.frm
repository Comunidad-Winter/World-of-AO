Option Explicit

Private Sub Command1_Click()
    Call CustomKeys.LoadDefaults
    Dim i As Long

    For i = 1 To CustomKeys.Count
        Text1(i).Text = CustomKeys.ReadableName(CustomKeys.BindedKey(i))
    Next i

End Sub

Private Sub Command2_Click()

    Dim i As Long

    On Error GoTo Fallo

    For i = 1 To CustomKeys.Count

        If LenB(Text1(i).Text) = 0 Then
            Call MsgBox("Hay una o mas teclas no validas, por favor verifique.", vbCritical Or vbOKOnly Or _
                                                                                 vbApplicationModal Or vbDefaultButton1, "World of AO")
            Exit Sub

        End If

    Next i

    'TeclasModificadas = True
    Call CustomKeys.SaveCustomKeys

Fallo:
    Unload Me

End Sub

